<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="7dp" >




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/name"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/work"
                    android:textSize="15sp"
                    android:layout_below="@+id/name"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_marginTop="5dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话："
        android:id="@+id/tv1"
        android:textSize="15sp"
        android:layout_below="@+id/work"
        android:layout_alignLeft="@+id/work"
        android:layout_alignStart="@+id/work"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/phone_num"
        android:textSize="15sp"
        android:layout_above="@+id/tv3"
        android:layout_toRightOf="@+id/tv1"
        android:layout_toEndOf="@+id/tv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="办公室："
        android:id="@+id/tv2"
        android:layout_alignTop="@+id/phone_num"
        android:layout_toRightOf="@+id/phone_num"
        android:layout_toEndOf="@+id/phone_num"
        android:textSize="15sp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/room"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:layout_toEndOf="@+id/tv2"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱："
        android:id="@+id/tv3"
        android:textSize="15sp"
        android:layout_below="@+id/tv1"
        android:layout_toLeftOf="@+id/phone_num"
        android:layout_toStartOf="@+id/phone_num"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/email"
        android:textSize="15sp"
        android:layout_alignTop="@+id/tv3"
        android:layout_toRightOf="@+id/tv3"
        android:layout_toEndOf="@+id/tv3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_logo_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>