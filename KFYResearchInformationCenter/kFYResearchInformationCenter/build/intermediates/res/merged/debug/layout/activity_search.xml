<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
 <include
        android:id="@+id/include1"
        layout="@layout/main_title"
        android:focusable="true" />
   <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/write_comment_layout"
        android:orientation="horizontal"
        android:padding="5dp"
      android:layout_margin="5dp">

        ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_comment"
            android:layout_marginLeft="5dp" />

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" 
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="8dp">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_search"
        android:layout_alignStart="@+id/ll_search"
        android:layout_below="@+id/ll_search"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="26dp"
        android:text="@string/recently_hot"
        android:textColor="@color/view_num" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/paring_line"
        android:background="@color/bottom_bar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot1"
        android:layout_below="@+id/paring_line"
        android:layout_alignLeft="@+id/paring_line"
        android:layout_alignStart="@+id/paring_line"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot2"
        android:layout_below="@+id/tv_hot1"
        android:layout_alignLeft="@+id/tv_hot1"
        android:layout_alignStart="@+id/tv_hot1"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot3"
        android:layout_below="@+id/tv_hot2"
        android:layout_alignLeft="@+id/tv_hot2"
        android:layout_alignStart="@+id/tv_hot2"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot4"
        android:layout_below="@+id/tv_hot3"
        android:layout_alignLeft="@+id/tv_hot3"
        android:layout_alignStart="@+id/tv_hot3"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot5"
        android:layout_below="@+id/tv_hot4"
        android:layout_alignLeft="@+id/tv_hot4"
        android:layout_alignStart="@+id/tv_hot4"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot6"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="64dp"
        android:layout_alignTop="@+id/tv_hot1"
        android:layout_alignRight="@+id/paring_line"
        android:layout_alignEnd="@+id/paring_line"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot7"
        android:layout_alignBottom="@+id/tv_hot2"
        android:layout_alignLeft="@+id/tv_hot6"
        android:layout_alignStart="@+id/tv_hot6"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot8"
        android:layout_alignBottom="@+id/tv_hot3"
        android:layout_alignLeft="@+id/tv_hot7"
        android:layout_alignStart="@+id/tv_hot7"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot9"
        android:layout_above="@+id/tv_hot5"
        android:layout_alignLeft="@+id/tv_hot8"
        android:layout_alignStart="@+id/tv_hot8"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_hot10"
        android:layout_alignBottom="@+id/tv_hot5"
        android:layout_alignLeft="@+id/tv_hot9"
        android:layout_alignStart="@+id/tv_hot9"
        android:textSize="18sp" />

</RelativeLayout>