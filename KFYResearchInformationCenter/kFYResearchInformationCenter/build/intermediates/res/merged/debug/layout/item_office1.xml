<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="7dp">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="New Text"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="5dp"
        android:text="New Text"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/work"
        android:layout_alignStart="@+id/work"
        android:layout_below="@+id/work"
        android:layout_marginTop="5dp"
        android:text="电话："
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv3"
        android:layout_toEndOf="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:text="New Text"
        android:textSize="15sp"/>

    TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="办公室："
    android:id="@+id/tv2"
    android:layout_alignTop="@+id/phone_num"
    android:layout_toRightOf="@+id/phone_num"
    android:layout_toEndOf="@+id/phone_num"
    android:textSize="15sp"
    android:layout_marginLeft="10dp" />

    TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/room"
    android:layout_alignTop="@+id/tv2"
    android:layout_toRightOf="@+id/tv2"
    android:layout_toEndOf="@+id/tv2"
    android:textSize="15sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/phone_num"
        android:layout_toStartOf="@+id/phone_num"
        android:text="邮箱："
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv3"
        android:layout_toEndOf="@+id/tv3"
        android:layout_toRightOf="@+id/tv3"
        android:text="New Text"
        android:textSize="15sp"/>


</RelativeLayout>