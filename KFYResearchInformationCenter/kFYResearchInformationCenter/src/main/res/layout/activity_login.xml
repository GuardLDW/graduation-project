<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/content_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:src="@drawable/kfy_logo"/>

        <EditText
            android:id="@+id/editText_Account"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="@dimen/login_edittext_height"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:layout_weight="1"
            android:background="@drawable/edit_login"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="@dimen/login_edittext_height"
            android:layout_alignLeft="@+id/editText_Account"
            android:layout_below="@+id/editText_Account"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/edit_login"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp">

        </EditText>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="45dp"
            android:layout_below="@+id/editText_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_login"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_below="@id/content_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/visitor_login"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="@string/visitor_login"
            android:textColor="@color/vlogin"
            android:textSize="16sp"/>
    </RelativeLayout>


</RelativeLayout>